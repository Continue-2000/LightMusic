/* pages/playdetail/playdetail.wxss */

.palydetailContainer{
    display: flex;
    position: relative;
    width: 100%;
    height: 100vh;
    flex-direction: column;
    align-items: center;
    background-image: "/static/images/header.jpg";
    background: linear-gradient(#3d3d3d,#1f1f1f);
  }
  .midContent{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 90%;
    position: relative;
    align-items: center;
  }
  /* 暂停播放时动画 */
  .pause{
          animation-play-state:paused;
  }
  .disc{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
    top: 40rpx;
    border-radius: 10rpx;
  }
  .songimage{
    margin-top: 80rpx;
    width: 600rpx;
    height: 600rpx;
    border-radius: 10rpx;
  }
  .songName{
      margin-top: 60rpx;
      font-size: 40rpx;
      color: #fff;

  }
  .singer{
      margin-top: 20rpx;
      font-size: 30rpx;
      color: rgb(238, 236, 236) !important;
  }
  /* 歌词区域 */
.lyricView{
  margin-top: 60rpx;
  height: 780rpx;
  overflow: auto;
}
/* 歌词区域 */
.lyricArea{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 32rpx;
  color: #aaa;
  transition: .3s;
}
.lyricArea text{
  height: 60rpx;
  line-height: 60rpx;
  max-width: 80%;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.lyricing{
  color: #fff;
}
  .buttomcontrol{
    display: flex;
    position: relative;
    bottom: 30rpx;
    width: 100%;
    height: 150rpx;
  }
  .buttomcontrol>view{
    position: relative;
    flex: 1;
  }
  .box{
     position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 100rpx;
    height: 100rpx;
    border: 4rpx solid #fff;
    border-radius: 50%;
  }
  
  .buttomcontrol>view image{
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 45rpx;
    height: 45rpx;
  }
  .buttomcontrol>view .playingImage{
      width: 70rpx;
    height: 70rpx;
  }
  .nextimg{
    transform: rotate(180deg);
  }
  
  /* 进度条区域 */
  .progressBar{
    position: absolute;
    align-items: center;
    padding: 0 10rpx;
    bottom: 168rpx;
    display: flex;
    height: 60rpx;
    width: 88%;
    border-radius: 1px solid red;
  }
  .countTime{
    color: #fff;
    font-size: 20rpx;
    
  }
  .lineBar{
    position: relative;
    width: 80%;
    height: 4rpx;
    background: rgba(255, 255, 255, .5);
    margin: auto;
  }
  .curentTimeBar{
    position: absolute;
    top: 0;
    left: 0;
    height: 4rpx;
    background: #eee;
  }
  .currentCircle{
    position: absolute;
    width: 12rpx;
    height: 12rpx;
    right: -12rpx;
    bottom: -4rpx;
    background: #fff;
    border-radius: 50%;
  }
  /* 展示播放页 */
  @import "/template/songList/songList.wxss";
  .recommendContainer{
    position: absolute;
    z-index: 20;
    opacity: .95;
    bottom: 20rpx;
    left: 0;
    height: 1010rpx;
  }
  
  