@import "/template/scrollTags/scrollTags.wxss";
.content{
    margin-top: 95rpx;
    width: 100%;
    height: (100vh - 80rpx);
    padding: 0 5%;
}
.official{
    width: 90%;
}
.officialItem{
    margin-top: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
.title{
    font-size: 30rpx;
    color: #000;
}
.contentItem{
    position: relative;
    width: 100%;
    height: 240rpx;
    background: rgb(223, 248, 223);
    border-radius: 10rpx;
}
.updateNum{
    position: absolute;
    right: 24rpx;
    top: 10rpx;
    font-size: 20rpx;
    color: #ccc;
}
.contentItem>view{
    position: absolute;
   top: 50%;
    transform: translateY(-50%);
    width: 100%;
    height: 200rpx;
    display: flex;
}
.contentItem .left{
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}
.contentItem .left text{
    font-size: 32rpx;
    color: red;
    white-space: nowrap;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.contentItem .left image{
   margin-top: 20rpx;
   width: 120rpx;
   height: 120rpx;
   border-radius: 10rpx;
}
.contentItem .right{
    display: flex;
    flex-direction: column;
    flex: 2;
}
.songItem{
    display: flex;
    flex: 1;
    font-size: 24rpx;
    line-height: 66rpx;
    width: 350rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.songItem .singer{
    color: #aaa;   
}