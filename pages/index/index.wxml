<playStatus
  playing="{{ playing }}"
  playSong="{{ playSong }}"
  playList="{{ playList }}"
  playIndex="{{ playIndex }}"
  backgroundAudioManager="{{ backgroundAudioManager }}"
  isShow="{{ isShow }}"
></playStatus>
