<SearchInput class="searchInput"></SearchInput>
<view class="index_container">
  <swiper
    class="banners"
    indicator-dots
    indicator-color="ivory"
    indicator-active-color="#d43c33"
    autoplay
  >
    <swiper-item wx:for="{{ bannerList }}" wx:key="bannerId">
      <image src="{{ item.pic }}" class="bannerImage"></image>
    </swiper-item>
  </swiper>
  <!-- 图标导航区域 -->
  <view class="navContent">
    <view class="nav-item" bindtap="toDayRecommend">
      <view class="iconfont">
        <image
          src="/static/images/navs/recommend.png"
          data-date="{{ todayDate }}"
        >
        </image>
      </view>
      <text class="title">每日推荐</text>
    </view>
    <view class="nav-item" bindtap="toSongSheet">
      <view class="iconfont">
        <image
          src="/static/images/navs/songsheet.png"
          data-date="{{ todayDate }}"
        >
        </image>
      </view>
      <text class="title">歌单</text>
    </view>
    <view class="nav-item" bindtap="toTop">
      <view class="iconfont">
        <image src="/static/images/navs/top.png" data-date="{{ todayDate }}">
        </image>
      </view>
      <text class="title">排行榜</text>
    </view>
    <view class="nav-item" bindtap="toFmPlay">
      <view class="iconfont">
        <image src="/static/images/navs/radio.png" data-date="{{ todayDate }}">
        </image>
      </view>
      <text class="title">私人FM</text>
    </view>
  </view>
  <!-- 推荐歌单模块 -->
  <IndexScrollItem ScrollItemInfo="{{ musicItemInfo }}"></IndexScrollItem>
  <!-- 推荐mv模块 -->
  <IndexScrollItem ScrollItemInfo="{{ mvItemInfo }}"></IndexScrollItem>

