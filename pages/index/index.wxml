      <text class="title">每日推荐</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-gedan" bindtap="toSongSheet"></text>
      <text class="title">歌单</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-paihangbang--" bindtap="toTop"></text>
      <text class="title">排行榜</text>
    </view>
    <view class="nav-item ">
      <text class="iconfont icon-diantai"></text>
      <text class="title">电台</text>
    </view>
    <view class="nav-item">
      <text class="iconfont icon-zhibo1"></text>
      <text class="title">直播</text>
    </view>
  </view>
  <!-- 推荐歌单模块 -->
    <IndexScrollItem ScrollItemInfo="{{musicItemInfo}}"></IndexScrollItem>
  <!-- 推荐mv模块 -->
    <IndexScrollItem ScrollItemInfo="{{mvItemInfo}}"></IndexScrollItem>
  <!-- 推荐视频模块 -->
    <IndexScrollItem ScrollItemInfo="{{videoItemInfo}}"></IndexScrollItem>

