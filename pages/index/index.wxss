/* pages/index/index.wxss */
.index_container{
  height: 100%;
  width: 100%;
}
.banners{
  height: 300rpx;
  width: 100%;
}
swiper-item{
  width: 100%
}
swiper-item image{
  width: 100%;
  height: 100%;
}

.navContent{
  display: flex;
  width: 100%;
  margin-top: 40rpx;
}
.nav-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  background: rgb(240,19,19);
  border-radius: 50%;
  line-height: 100rpx;
  font-size: 50rpx;
  color: #fff;
}
.title{
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top:10rpx ;
}
.recommend{
  padding: 20rpx;
}
.recommend-title{
  font-size: 34rpx;
  color: #666;
}
.header view{
  margin-top: 20rpx;
}
.recommendyou{
  font-size: 36rpx;
}
.more{
  display: block;
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  float: right;
  border: 1rpx solid #000;
  font-size: 28rpx;
  border-radius: 32rpx;
}
.recommend-content{
  margin-top: 20rpx;
  display: flex;
}
.recommend-item{
  margin-right: 20rpx;
  width: 200rpx;
  height: 300rpx;
}
.image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
}
.introduce{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}