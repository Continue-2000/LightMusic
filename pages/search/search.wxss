.searchContainer{
  padding: 0 20rpx;
}
.searchHeader{
  position: relative;
  width: 100%;
  height: 45rpx;
  padding: 10rpx 0;
   border-bottom: 1px solid #000;
}
.searchInput{
  padding-left: 60rpx;
  width: 100%;
  height: 100%;
}
.icon-sousuo{
position: absolute;
font-size: 40rpx;
left: 10rpx;
top: 50%;
transform: translateY(-50%);
}
.icon-shanchu{
  position: absolute;
  font-size: 35rpx;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}
/* 搜索历史 */
.searchHistory{
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 15rpx 0;
}
.searchHistory .title{
  width: 80rpx;
  font-size: 28rpx;
  color: #000;
}
.historyScrollView{
  display: flex;
  flex: 1;
  white-space:nowrap;
  width: 500rpx;
  height: 60rpx;
}
.srollItem{
  height: 100%;
  margin-right: 15rpx;
}
.content{
  padding: 0 20rpx;
  height: 100%;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  background: #eee;
  border-radius: 25rpx;
}
.icon-shanchu1{
  width: 50rpx;
}
/* 搜索到的内容 */
.searchContent{
  margin-top: 20rpx;
}
.searchContentItem{
  position: relative;
  display: flex;

}
.searcheItemIcon{
  color: #ccc;
}

.box{
margin-left: 55rpx;
padding: 20rpx 0;
height: 100%;
width: 100%;
border-bottom: 1rpx solid #eee;
}
.songName{
  color: #666;
  font-size: 30rpx;
}
/* 热搜榜 */
.hotsearch{
margin-top: 30rpx;
width: 100%;
height: 50rpx;
padding: 10rpx 0;
line-height: 50rpx;
border-bottom: 1rpx solid #ccc;
}
.hotsearch .title{
  font-size: 28rpx;
  color: #000;
}
.hotsearch_body{
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.bodyItem{
  display: flex;
  align-items: center;
  width: 45%;
  height: 40rpx;
  padding: 20rpx 10rpx 20rpx 0;
}
.bodyItem .order{
width: 56rpx;
height: 100%;
font-size: 28rpx;
color: #ccc;
}
.songName{
  position: relative;
  display: block;
  height: 100%;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bodyItem image{
  width: 40rpx;
  height: 35rpx;
  margin-left: 20rpx;
}
.lookHotMore{
  padding: 15rpx 0;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #666;
}