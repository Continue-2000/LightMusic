@import "/template/scrollTags/scrollTags.wxss";
.songSheetContainer{
margin-top: 95rpx;
height: calc(100vh - 80rpx);
}
.songSheetSwiper{
  width: 100%;
  height: 100%;
}
.content{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height:100%;
}
.contentItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3%;
  height: 270rpx;
}

.contentItem .image{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.contentItem .image image{
  width: 200rpx;
  height: 200rpx;
}
.countPart{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  height: 30rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  background: #666;
}
.countNum{
  height: 100%;
  font-size: 18rpx;
  line-height: 30rpx;
  color: #fff;
}
.itemIntroduce{
  width: 200rpx;
  height: 52rpx;
  margin-top: 10rpx;
  font-size: 20rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}