.videoDetailContainer{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background: #000;
}
.videoSwiper{
  width: 100%;
  height: 100%;
}
.bulletChat{
  width: 100%;
  height: 200rpx;
}
.video{
  width: 100%;
  height: 480rpx;
  transition: none .3s;
}
.moveVideo{
  position:absolute;
  left: 0;
  top: 0;
}
video{
  display: block;
  width: 100%;
  height: 100%;
}

.info{
  flex: 1;
  width: 100%;
  display: flex;
}

.authorinfo{
  position:fixed;
  flex: 1;
  left: 0;
  bottom:26rpx;
  width:calc(100% - 130rpx);
}
.content{
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  width: 100%;
  height: 200rpx;
}
.header image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  border: 4rpx solid #fff;
}

.authorName{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.videoName{
  margin-top: 20rpx;
  font-size: 30rpx;
  max-width: 600rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
}
.watchNums{
  margin-top: 20rpx;

  font-size: 24rpx;
  color: #ccc;

}
.control{
  position: fixed;
  display: flex;
  right: 0;
  bottom: 26rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 500rpx;
}
.control-item{
  margin-top: 20rpx;
  flex: 1;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
}
.iconfont{
  font-size: 50rpx;
}
.title{
  max-width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  font-size: 26rpx;
}
@import "/template/comment/comment.wxss"