.videoDetailContainer{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background: #000;
}
.bulletChat{
  width: 100%;
  height: 200rpx;
}
.video{
  width: 100%;
  height: 480rpx;

}
video{
    display: block;
  width: 100%;
  height: 100%;
}

.info{
  flex: 1;
  width: 100%;
  display: flex;
}

.authorinfo{
  position:relative;
  flex: 1;

}
.content{
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  width: 100%;
  height: 200rpx;
}
.header image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  border: 4rpx solid #fff;
}

.authorName{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.videoName{
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #fff;
}
.watchNums{
  margin-top: 20rpx;

  font-size: 24rpx;
  color: #ccc;

}
.control{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
}
.control-item{
  margin-top: 10rpx;
  flex: 1;
  font-size: 25rpx;
  color: #fff;
  text-align: center;
}
.iconfont{
  font-size: 50rpx;
}
.title{
  color: #fff;
  font-size: 26rpx;
}