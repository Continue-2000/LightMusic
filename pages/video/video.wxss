@import "/template/scrollTags/scrollTags.wxss";

/* 视频数据区域 */

.videoScroll{
  margin-top: 10rpx;
  height: calc(100vh - 158rpx);
}
.videoScrollItem{
  padding: 10rpx 20rpx;
}
.videoScrollItem video{
  display: block;
  
}
.common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoScrollItem .title{
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.videoScrollItem .avator{
  font-size: 20rpx;
  color:#ccc
}
