.commentContainer{
    position: fixed;
    z-index: 999;
    left: 0;
    bottom: 0;
    display:flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: calc(100vh - 480rpx);
    background-color: #fff;
}
.commnetTitle{
    width: 100%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #000;
}
.commnetContent{
    width:95%;
    height:calc(100% - 80rpx);
}
.contentItem{
    display: flex;
}
.contentItem .avatarUrl{
    margin-top: 10rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.contentItem .detail{
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 10rpx;
    border-bottom: 1px solid #eee;
}
.contentItem .detail .nickname{
    font-size: 26rpx;
    color: #222;
}
.contentItem .detail .contentTime{
    font-size: 25rpx;
    color: #666;
}
.contentItem .detail .contentInfo{
    font-size: 26rpx;
    color: #000;
    margin-top: 20rpx;
}
.contentItem  .subIcon{
    width: 20rpx ;
    height: 20rpx ;
}
.contentItem .detail .reply{
    display: flex;
    flex-direction: column;
    padding: 15rpx;
    background-color: #eee;
    border-radius: 5rpx;
}
.contentItem .detail .reply .replyItem{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 15rpx;
}
.input-section {
    position: absolute;
    display: flex;
    align-items: center;
    height: 110rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    background: #fff;
}
 
.input_input {
    background: #fff;
    margin-top: 12rpx;
    z-index: 500;
    width: 580rpx;
    height: 110rpx;
    padding-left: 35rpx;
 
}
 .sendArea{
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
 }
 ._btn{
    padding: 0 20rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    background: rgb(47, 80, 19);
    z-index: 550;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
 }
 .replyNiceName{
     color: #ccc;
 }
 .replyContent{
     margin-left: 10rpx;
     color: #666;
 }
.send_btn {
    right: 30rpx;
}
 .cancel_btn{
    right: 140rpx;
 }
.send_btn_text {
    display: flex;
    font-size: 32rpx;
    font-family: 'PingFang';
    color: #fff;
    z-index: 560;

}