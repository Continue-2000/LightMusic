/* components/navheader/NavHeader.wxss */
.header{
  padding: 40rpx 0;
}
.recommend-title{
  font-size: 40rpx;
  font-weight: 500;
  color: #000;
}
.more{
  display: block;
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  float: right;
  border: 1rpx solid rgb(71, 71, 71);
  font-size: 26rpx;
  border-radius: 32rpx;
}
.recommend{
  padding: 20rpx;
  border-bottom: 20rpx solid #eee;
}
.recommend-content{
  height: 300rpx;
  display: flex;
}
.recommend-item{
  margin-right: 20rpx;
  width: 200rpx;
  /* height: 300rpx; */
}
.image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.image image{
  width: 100%;
  height: 100%;
}
.introduce{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}