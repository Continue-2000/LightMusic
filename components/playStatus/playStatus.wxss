/* components/playStatus/playStatus.wxss */
.playStatus{
    display: flex;
    position: fixed;
    align-items: center;
    padding: 0 15rpx;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    left: 0;
    bottom: 0;
    background: #fff;
}
.songImage{
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
}
.playStatus .name{
    height: 100%;
    padding-left: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 6;
}
.avatorName{
    color: #ccc;
    font-size: 24rpx;
}
.playStatus .controlItem{
    flex: 1;
}
.playOrPause .box{
    position: relative;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    border: 2rpx solid #ccc;
}
.playOrPause image{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 30rpx;
    height: 30rpx;
}
.playStatus .more image{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50rpx;
    height: 50rpx;
}
@import "/template/songList/songList.wxss";
.recommendContainer{
  position: fixed;
  z-index: 20;
  opacity: .95;
  bottom: 20rpx;
  left: 0;
  height: 1010rpx;
}