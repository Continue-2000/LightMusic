/* components/playStatus/playStatus.wxss */
.playStatus{
    display: flex;
    position: absolute;
    align-items: center;
    padding: 0 15rpx;
    width: 100%;
    height: 90rpx;
    left: 0;
    bottom: 0;
    background: #fff;
}
.songImage{
    width: 70rpx;
    height: 70rpx;
    border-radius: 10rpx;
}
.playStatus .name{
    padding-left: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 6;
}
.playStatus .controlItem{
    flex: 1;
}
.playOrPause .box{
    position: relative;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    border: 2rpx solid #ccc;
}
.playOrPause image{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 30rpx;
    height: 30rpx;
}
.playStatus .more image{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50rpx;
    height: 50rpx;
}